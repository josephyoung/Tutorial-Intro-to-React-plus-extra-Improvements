{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true,
        "node": true
    },
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "prettier",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react",
        "import",
        "prettier"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "react/react-in-jsx-scope": 1,
        "react/jsx-uses-react": 1,
        "no-set-state": "off",
        "quotes": [1, "single"],
        "react/button-has-type": [0],
        "react/no-multi-comp": [0],
        "react/prop-types": [0],
        "react/destructuring-assignment": [0]
    }
}
